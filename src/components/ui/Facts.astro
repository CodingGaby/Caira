---
import type { Fact } from "@customTypes/factType";

// Ensure the getFact function returns a Promise that resolves to Fact[]
let facts: Fact[] = [
  {
    "fact": "After the Eiffel Tower was built, one person was killed during the installation of the lifts. No one was killed during the actual construction of the tower"
  }
];

const fact = facts.length > 0 ? facts[0].fact : "No fact available today"; // Safely access the first fact
---

<div class="flex flex-col bg-white text-black rounded-lg p-8 shadow-lg hover:shadow-xl hover:transform 
  hover:scale-105 duration-300 max-w-[450px] mt-8">
  <h2 class="text-red-500">Fact of the day!</h2>
  <h3>{fact}</h3>
</div>
