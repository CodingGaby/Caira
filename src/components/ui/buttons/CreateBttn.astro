---
import Pencil from "../icons/Pencil.astro";


---
<a href="/create" title="Go to top" id="myBtn">
  <Pencil/>
</a>

<style>
    
  #myBtn {
    display: block;
    position: fixed;
    bottom: 20px;
    right: 30px;
    z-index: 99;
    font-size: 18px;
    border: none;
    outline: none;
    background-color: #2563eb;
    color: white;
    cursor: pointer;
    padding: 15px;
    border-radius: 100%;
  }
  
  #myBtn:hover {
    background-color: #1d4ed8;
  }
</style>